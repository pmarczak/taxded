@model TaxDeductionReporting.Models.ReportViewModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Creating report for @Model.Date.ToString("Y")</h3>

<div class="row">

	<div class="col-12">
		<form asp-action="Create">
			<input type="hidden" name="year" value="@Model.Date.Year" />
			<input type="hidden" name="month" value="@Model.Date.Month" />


			<h4>Calendar</h4>
			<hr />
			<p>
				@Html.EditorFor(x => x.Calendar)
			</p>

			<h4>JIRA tickets</h4>
			<hr />
			<p>
				@Html.DisplayFor(x => x.Tickets, "TicketsTemplate")
			</p>

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>

</div>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	<script src="~/js/calendar.js"></script>
}
