@model TaxDeductionReporting.Models.ReportViewModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Creating report for @Model.Date.ToString("Y")</h2>

<div class="row">
	<div class="col-md-8">
		<form asp-action="Create">
			<input type="hidden" name="year" value="@Model.Date.Year" />
			<input type="hidden" name="month" value="@Model.Date.Month" />


			@Html.EditorFor(x => x.Calendar)
			@Html.DisplayFor(x => x.Tickets, "TicketsTemplate")


			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	<script src="~/js/calendar.js"></script>
}
